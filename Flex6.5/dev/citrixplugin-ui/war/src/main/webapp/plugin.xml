<?xml version="1.0" encoding="UTF-8"?>

<plugin id="com.vmware.simplivity.citrixpluginui"
   moduleUri="CitrixPluginModule.swf" defaultBundle="com_vmware_simplivity_citrixplugin">

   <resources>
      <resource locale="{locale}">
         <!-- relative path of the .swf generated by the build script -->
         <module uri="locales/citrixplugin-ui-{locale}.swf"/>
      </resource>
   </resources>

   <!-- Global app view -->
   <extension id="com.vmware.simplivity.citrixpluginui.appview">
      <extendedPoint>vise.global.views</extendedPoint>
      <object>
         <name>#{app.name}</name>
         <componentClass className="com.vmware.simplivity.citrixplugin.views.MainView"/>
      </object>
   </extension>
   
   <!-- Configure view -->
   <extension id="com.vmware.simplivity.citrixpluginui.configureView">
      <extendedPoint>vise.global.views</extendedPoint>
      <object>
         <name>Configure</name>
         <componentClass className="com.vmware.simplivity.citrixplugin.views.ConfigureView"/>
      </object>
   </extension>
   
   <!-- Deconfigure view -->
   <extension id="com.vmware.simplivity.citrixpluginui.deconfigureView">
      <extendedPoint>vise.global.views</extendedPoint>
      <object>
         <name>Deconfigure</name>
         <componentClass className="com.vmware.simplivity.citrixplugin.views.DeconfigureView"/>
      </object>
   </extension>

    <!-- Home view shortcut -->
   <extension id="com.vmware.simplivity.citrixpluginui.shortcut">
      <extendedPoint>vise.home.shortcuts</extendedPoint>
      <object>
         <name>#{app.name}</name>
         <categoryUid>vsphere.core.controlcenter.monitoringCategory</categoryUid>
         <icon>#{citrix.icon}</icon>
         <targetViewUid>com.vmware.simplivity.citrixpluginui.appview</targetViewUid>
      </object>
   </extension>

   <!-- Add a category in the Administration inventory view -->
   <extension id="com.vmware.simplivity.citrixpluginui.adminCategory">
      <extendedPoint>vise.navigator.nodespecs</extendedPoint>
      <object>
         <title>#{app.name}</title>
         <parentUid>vsphere.core.navigator.administration</parentUid>
      </object>
   </extension>

   <!-- Add an entry in the Global app Category created above -->
   <extension id="com.vmware.simplivity.citrixpluginui.adminSettings">
      <extendedPoint>vise.navigator.nodespecs</extendedPoint>
      <object>
         <title>Settings</title>
         <parentUid>com.vmware.simplivity.citrixpluginui.adminCategory</parentUid>
         <navigationTargetUid>com.vmware.simplivity.citrixpluginui.settingView</navigationTargetUid>
      </object>
   </extension>

</plugin>
